<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>QRCode Servlet</display-name>
    <servlet>
        <servlet-name>QRCodeServlet</servlet-name>
        <servlet-class>cmu.cc.team.spongebob.query1.server.QRCodeServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>HeartBeatServlet</servlet-name>
        <servlet-class>cmu.cc.team.spongebob.query1.server.HeartBeatServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>cmu.cc.team.spongebob.query1.server.IndexServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>QRCodeServlet</servlet-name>
        <url-pattern>/q1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HeartBeatServlet</servlet-name>
        <url-pattern>/heartbeat</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>